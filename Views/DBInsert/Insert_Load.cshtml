@model CoreWebMvc1stApp.Models.Employee
<form asp-action="Insert_click" class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-md-2">Employee Name</label>
        <div class="col-md-10">
            <input type="text" asp-for="Name" class="form-control" id="t1" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Employee Address</label>
        <div class="col-md-10">
            <input type="text" asp-for="Address" class="form-control" id="t2" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Employee Salary</label>
        <div class="col-md-10">
            <input type="text" asp-for="Salary" class="form-control" id="t3" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Insert</button>
        </div>
</form>

@{
    if(TempData["Msg"] != null)
    {
        <script>
            alert('@TempData["Msg"]');
            document.getElementById("t1").value = "";
            document.getElementById("t2").value = "";
            document.getElementById("t3").value = "";
        </script>
    }
}